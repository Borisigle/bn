# Copy to .env and fill in values

# General
# BOT_MODE=ARBITRAGE_PURE (default) | LEGACY
BOT_MODE=ARBITRAGE_PURE

PAPER_TRADING=true
MOCK_MODE=true
LOG_LEVEL=info

# Binance (not required for public data, but included for future trading)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Polymarket (required for real trading via CLOB)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_HOST=https://clob.polymarket.com
GAMMA_HOST=https://gamma-api.polymarket.com

# Pure arbitrage bot config
STARTING_CAPITAL=100
# POSITION_SIZE: if <= 1 it is interpreted as a fraction of balance; if > 1 it is interpreted as USD
POSITION_SIZE=10
MIN_PROFIT_THRESHOLD=0.005
MIN_MARKET_VOLUME=10000
MARKET_SCAN_LIMIT=1000
SCAN_INTERVAL=30000
EXECUTION_DELAY=1000
# Max Gamma API requests per second
GAMMA_RPS=5

# Legacy 15-minute BTC UP/DOWN strategy config (only used when BOT_MODE=LEGACY)
CAPITAL=100
TAKE_PROFIT=0.30
STOP_LOSS=0.15
SPREAD_THRESHOLD=0.05
PRICE_MOVE_THRESHOLD=2.0
TRADING_UNTIL_MINUTE=13

# Loop (legacy)
POLL_INTERVAL_SECONDS=1
